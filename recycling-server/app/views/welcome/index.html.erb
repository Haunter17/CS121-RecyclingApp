<%= render partial: "layouts/nav", locals: {items: ["About", "Categories", "Contact"], shouldShow: false} %>
<header class="index-header">
  <div class="header-content">
    <div class="header-content-inner">
      <h1 id="homeHeading">What do you want to recycle?</h1>
      <hr>
      <form action="/cities/1" method="get" class="searchForm">
        <input class="searchTerm" name="q" placeholder="Enter zipcode, city or item" autocomplete="off">
        <button type="submit" class="searchBtn">
          <i class="fa fa-search searchIcon"></i>
        </button>
      </form>
    </div>
  </div>
</header>

<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">About us</h2>
        <hr class="primary">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
          <i class="fa fa-4x fa-search text-primary sr-icons"></i>
          <h3>Search with Ease</h3>
          <p class="text-muted">TODO: Search description</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
          <i class="fa fa-4x fa-newspaper-o text-primary sr-icons"></i>
          <h3>Comprehensive Data</h3>
          <p class="text-muted">TODO: Data description</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
          <i class="fa fa-4x fa-map-marker text-primary sr-icons"></i>
          <h3>Facilities on Map</h3>
          <p class="text-muted">TODO: Map description</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
          <i class="fa fa-4x fa-edit text-primary sr-icons"></i>
          <h3>Customizable</h3>
          <p class="text-muted">TODO: Edit description</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="no-padding" id="categories">
  <div class="container-fluid">
    <div class="row no-gutter popup-gallery">
      <% @categories.each do |category| %>
      <div class="col-lg-4 col-sm-6">
        <a href="<%= image_url("categories/fullsize/#{category.image_link}") %>" class="portfolio-box">
          <%= image_tag "categories/thumbnails/#{category.image_link}", class: "img-responsive" %>
          <div class="portfolio-box-caption">
            <div class="portfolio-box-caption-content">
              <div class="project-name">
                <%= category.name %>
              </div>
            </div>
          </div>
        </a>
      </div>
      <% end %>
    </div>
  </div>
</section>

<section id="contact" class="bg-dark">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 text-center">
        <h2 class="section-heading">Let's Get In Touch!</h2>
        <hr class="primary">
        <p>(Ready to recyle with us?) Having issue and getting mad with our product? That's great! Give us a call or send us an email and we will get back to you as soon as possible!</p>
      </div>
      <div class="col-lg-4 col-lg-offset-2 text-center">
        <i class="fa fa-phone fa-3x sr-contact"></i>
        <p>Michael's phone number</p>
      </div>
      <div class="col-lg-4 text-center">
        <i class="fa fa-envelope-o fa-3x sr-contact"></i>
        <p><a href="mailto:your-email@your-domain.com">ycai@hmc.edu</a></p>
      </div>
    </div>
  </div>
</section>
